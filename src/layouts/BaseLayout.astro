---
const { title, description } = Astro.props;
const year = new Date().getFullYear();
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="color-scheme" content="light dark" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600;700&family=Karla:wght@400;500;600&family=Space+Mono:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" href="/favicon.ico" />
    <meta name="theme-color" content="#f9f5ef" media="(prefers-color-scheme: light)" />
    <meta name="theme-color" content="#121113" media="(prefers-color-scheme: dark)" />
    <link rel="stylesheet" href="/assets/styles.css" />
  </head>
  <body>
    <header class="site-header">
      <div class="container nav">
        <a href="/" class="brand">
          <span class="brand-title">Lights Camera Teach</span>
        </a>
        <nav class="nav-links" aria-label="Primary">
          <a href="/">Home</a>
          <a href="/about/">About</a>
          <a href="/#lessons">Lessons</a>
          <a href="/#contact">Contact</a>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <div class="container">
        <div>Lights Camera Teach &mdash; travel-rooted learning.</div>
        <div>&copy; {year} M.E. MacDonald</div>
      </div>
    </footer>
  </body>
</html>
